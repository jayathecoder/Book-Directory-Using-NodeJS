
<head>
  <link href="/css/directorycss.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<%- include("header") -%>


  <div class="container-fluid px-1 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
          <div class="card">

            <div class="header">
              <img src="https://cdn-icons-png.flaticon.com/512/201/201556.png" class="book-logo"/>
            <h1 class="heading">
              Book Directory
            </h1>
            </div>

            <div class="row justify-content-between text-left">
              <%  newListItems.forEach((newl)=>{ %>
                <form action="/delete" method="post">
                <div class="item">
                  <input type="checkbox" class="form-check-input" value="<%= newl._id %>" name="newlname" onchange="this.form.submit()" >
                  <label for="newlname" class="form-check-label">
                    <p>Book Name:<%=  newl.name %></p>
                    <p>Author Name:<%=  newl.author %></p>
                    <p>Number of Pages:<%=  newl.pages %></p>
                  </label>
                </div>
                </form>
                <form action="/edits" method="post">
                  <button type="submit" value="<%= newl._id %>" name="editbook" class="btn-block btn-primary">Edit</button>
                </form>
               <% }) %>
            </div>
            
            <p>Note: To delete an entry, kindly check it in checkbox!</p>
        


             <div class="row justify-content-between text-left">
              <form class="item" action="/directory" method="post">
                <input type="text" name="newBook" placeholder="New Book" autocomplete="off">
                <input type="text" name="newAuthor" placeholder="New Author" autocomplete="off">
                <input type="text" name="newPages" placeholder="Pages" autocomplete="off">
                <button type="submit" class="btn-block btn-primary" name="list" >Add Book</button>
              </form>
             </div>
        
              
              
              <div class="row justify-content-end">
                <form action="/search">
                  <button type="submit" class="btn-block btn-primary">Search</button>
                </form>
                <form action="/logOut">
                  <button type="submit" class="btn-block btn-primary">Log Out</button>
                </form>
              </div>
          
          </div> 
        </div>
    </div>
</div>







  


