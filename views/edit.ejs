<head>
    <link rel="stylesheet" href="/css/style.css" >
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>


body{
    <%- include("header") -%>
    <div class="form-container">
        <h1 style="margin-bottom: 20px;">Update</h1>
        <form action="/edit" method="post">
            <div class="form-group">
                <input type="text" name="bookname" placeholder="Insert book name to search for">
            </div>
            <div class="form-group">
                <input type="text" name="newbookname" placeholder="Insert the updated name">
            </div>
            <div class="form-group">
                <input type="text" name="newauthorname" placeholder="Insert the updated author">
            </div>
            <div class="form-group">
                <input type="number" name="newpages" placeholder="Insert the updated page numbers">
            </div>
            
            <button type="submit" class="submit-btn">Update</button>
        </form>

    </div>

<%- include("footer") -%>

}
